{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Skopio",
  "version": "0.1.2",
  "identifier": "com.samwahome.skopio",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [],
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$ASSET/**", "$RESOURCE/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": ["sounds/*"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVDRTZBMUNENDg3N0RBQkYKUldTLzJuZEl6YUhtWENKQWVLTFpHTGhWejlqcDBzOExQdlZzUTRvVStFZzVpdTRkdG13dHF0QXQK",
      "endpoints": [
        "https://github.com/Skopio-app/desktop-releases/releases/latest/download/latest.json"
      ]
    }
  }
}
